<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadFile</servlet-name>
        <servlet-class>servlets.UploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsersListServlet</servlet-name>
        <servlet-class>servlets.UsersListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GamesListServlet</servlet-name>
        <servlet-class>servlets.GamesListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GamesInfoServlet</servlet-name>
        <servlet-class>servlets.GamesInfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JoinGameServlet</servlet-name>
        <servlet-class>servlets.JoinGameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GameActionServlet</servlet-name>
        <servlet-class>servlets.ActionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExitGameServlet</servlet-name>
        <servlet-class>servlets.ExitGameServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadFile</servlet-name>
        <url-pattern>/uploadFile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersListServlet</servlet-name>
        <url-pattern>/usersList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GamesListServlet</servlet-name>
        <url-pattern>/gameList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GamesInfoServlet</servlet-name>
        <url-pattern>/getGameFromGameList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JoinGameServlet</servlet-name>
        <url-pattern>/joinGame</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GameActionServlet</servlet-name>
        <url-pattern>/gameActions</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExitGameServlet</servlet-name>
        <url-pattern>/exitFromLobby</url-pattern>
    </servlet-mapping>
</web-app>